from volcano.shell import date, whoami

# An example volcano application, also doubles up as our test suite
#
def say_hello(name='World'):

    def ken_error():
        print("Warning Ken detected")

    def check_for_ken():

        if name == "Ken":
            ken_error()
            return

    check_for_ken()

    print(f"- Hello {name}!")

def goodbye():
